<h1 style="font-size: 24px; margin-bottom: 20px;">Welcome To LinkedIn Job Portal</h1>

<table style="border-collapse: collapse; width: 100%;">
  <thead>
    <tr>
      <th style="border: 1px solid #000; padding: 8px;">Company</th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td style="border: 1px solid #000; padding: 8px;"><%= link_to company.company_name, company, style: 'text-decoration: none; color: #007BFF;' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if current_user.type == "JobRecruiter" %>
  <% if current_user.company.blank? %>
    <li style="background-color: #ffffff; display: inline-block; margin-left: 70px; padding-top: 35px;"><%= link_to "Create New Company", new_company_path, style: 'text-decoration: none; color: #007BFF;' %></li>
  <% end %>
<% elsif current_user.type == "JobSeeker" %>
  <ul style="list-style-type: none; margin: 0; padding: 0;">
    <li style="display: inline-block; margin-left: 70px; padding-top: 35px;"><%= link_to "Create Skill", new_skill_path, style: 'text-decoration: none; color: #007BFF;' %></li>
    <li style="display: inline-block; margin-left: 70px; padding-top: 35px;"><%= link_to "See Skills", skills_path, style: 'text-decoration: none; color: #007BFF;' %></li>
    <li style="display: inline-block; margin-left: 70px; padding-top: 35px;"><%= link_to "Add Your Skills", add_skill_skills_path, style: 'text-decoration: none; color: #007BFF;' %></li>
  </ul>
<% end %>
