<h1>Listing Jobs</h1>

<table>
  <thead>
    <tr>
      <th> Job </th>
      <th> Required_skills </th>
      <!-- <th> company name </th> -->
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.job_title %></td>
        <td><%= job.required_skills %></td>
        <!-- <td><%= job.company.company_name%></td> -->
        <%- if current_user.type == "JobSeeker" %>
          <td><%= link_to "apply job", new_job_application_path(:job_id => job.id)%></td>
        <% elsif current_user.company.jobs.present? %>
          <td><%= job.job_applications.pluck(:status)%></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
