<!DOCTYPE html>
<html>
  <head>
    <title>LinkedInJobPortal</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application","data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  </head>

  <body>
    <nav class="nav justify-content-end" style="background-color: lightgrey">
      <ul class="nav">
      <%- if user_signed_in? %>
        <li class="nav-item"><a class="nav-link active" href="">Home</a></li>
        <li class="nav-item"><a class="nav-link active" href="users/current_users">Profile</a></li>
        <li class="nav-item"><a class="nav-link active" href="users/sign_out">Sign out</a></li>
        <li class="nav-item"><%= form_tag common_search_path, method: :post do %><%= text_field_tag :search , params[:search] %><%= submit_tag "Search", name: nil %><% end %></li>
      <% end %>
      </ul>
    </nav>
    <% if notice %> <p class="alert alert-success"><%= notice %></p> <% end %>
    <% if alert %> <p class="alert alert-danger"><%= alert %></p> <% end %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <%= yield %>
      <%- if user_signed_in? %>
        <%= link_to "Back", :back , style: 'font-size: 18px' %>
      <% end %>
  </body>
</html>