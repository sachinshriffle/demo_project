<h1 style="font-size: 24px; margin-bottom: 20px;">Your Skills</h1>

<table style="border-collapse: collapse; width: 100%;">
  <thead>
    <tr>
      <th style="border: 1px solid #000; padding: 8px;">Skills</th>
      <th style="border: 1px solid #000; padding: 8px;">Delete Your Skill</th>
    </tr>
  </thead>

  <tbody>
    <% @skills.each do |skill| %>
      <tr>
        <td style="border: 1px solid #000; padding: 8px;"><%= skill.skill_name %></td>
        <td style="border: 1px solid #000; padding: 8px;"><li"><%= link_to "delete", skill_path(skill.id), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></li></td>
      </tr>
    <% end %>
  </tbody>
</table>
<li style="float: left; color: #f2f2f2; text-align: center; padding: 14px 16px; text-decoration: none; font-size: 17px"><%= link_to "add skill" , add_skill_skills_path %>