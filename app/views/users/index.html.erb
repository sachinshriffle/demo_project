<% if false %>
	<h1 style="font-size: 24px; margin-bottom: 20px; text-align: center; font-weight: bold;">.....Your Profile.....</h1>

	<p style="font-size: 18px; margin-bottom: 10px; text-align: center; font-weight: bold;">Name: <%= @users.name %></p>
	<p style="font-size: 17px; margin-bottom: 10px; text-align: center; font-weight: bold;">Email: <%= @users.email %></p>
	<p style="font-size: 16px; margin-bottom: 10px; text-align: center; font-weight: bold;">Role: <%= @users.type %></p>
	<p style="font-size: 16px; margin-bottom: 10px; text-align: center; font-weight: bold;"><%= link_to "Edit Your Profile", edit_user_registration_path(@users)%></p>
	<p style="font-size: 16px; margin-bottom: 10px; text-align: center; font-weight: bold;"><%= link_to "Delete my account", registration_path(@users), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %></p>
<% end %>
<section class="vh-100" style="background-color: darkgrey;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-lg-6 mb-4 mb-lg-0">
        <div class="card mb-3" style="border-radius: .5rem;">
          <div class="row g-0">
            <div class="col-md-4 gradient-custom text-center text-white"
              style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
              <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3.webp" alt="avatar" class="rounded-circle img-fluid" style="height: 250px;">
            </div>
            <div class="col-md-8">
              <div class="card-body p-4">
                <h6>Your Profile</h6>
                <hr class="mt-0 mb-4">
                <div class="row pt-1">
                  <div class="col-6 mb-3">
                    <h6>Email</h6>
                    <p class="text-muted"><%= @users.email %></p>
                  </div>
                  <div class="col-6 mb-3">
                    <h6>Name</h6>
                    <p class="text-muted"><%= @users.name %></p>
                  </div>
                </div>
                <hr class="mt-0 mb-4">
                <div class="row pt-1">
                  <div class="col-6 mb-3">
                    <h6>Role</h6>
                    <p class="text-muted"><%= @users.type %></p>
                  </div>
                  <div class="col-6 mb-3">
                    <h6>Status</h6>
                    <p class="text-muted">Active</p>
                  </div>
                </div>
                <div class="d-flex justify-content-start">
                  <%= link_to "Delete my account", registration_path(@users), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %>
                  <%= link_to "Edit Your Profile", edit_user_registration_path(@users)%>
                  <a href="#!"><i class="fab fa-instagram fa-lg"></i></a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>